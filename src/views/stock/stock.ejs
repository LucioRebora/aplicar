                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <% for(var i=0; i < talles.length; i++) { %>
                                <th><%=talles[i].talle%></th>
                                <%}%>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <% for(var i=0; i < talles.length; i++) { %>
                                <td>
                                    <div class="form-group">
                                        <input class="form-control" type="number" min="0" max="99999" name="<%=talles[i].talle%>" value="<%=talles[i].cantidad%>">
                                    </div>
                                </td>
                                <%}%>
                            </tr>
                      </tbody>
                    </table>
                    <button class="btn btn-success" type="submit">
                        Guardar
                    </button>
                    <a href="/producto/list" class="btn btn-info" role="button" aria-disabled="true">Volver</a>
                  </div>
                </form>
    </div>         
